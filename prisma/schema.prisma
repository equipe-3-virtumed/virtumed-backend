generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String   @id @unique @default(uuid())
  name     String
  email    String   @unique
  password String
  image    String
  role     String   @default("admin")
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("admin")
}

model Organization {
  id       String   @id @unique @default(uuid())
  name     String
  email    String   @unique
  cnpj     String   @unique
  password String
  image    String
  role     String   @default("organization")
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("organization")
}

model Doctor {
  id       String @id @unique @default(uuid())
  name     String
  email    String @unique
  crm      String @unique
  password String
  image    String
  role     String @default("doctor")

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  room     Room?

  @@map("doctor")
}

model Patient {
  id       String @id @unique @default(uuid())
  name     String
  cpf      String @unique
  email    String @unique
  password String
  image    String
  role     String @default("patient")

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  room Room?

  @@map("patient")
}

model Room {
  id String @id @unique @default(uuid())

  name String @unique

  doctorId String @unique
  doctor   Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  patientId String  @unique
  patient   Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  appointmentTime DateTime
}
