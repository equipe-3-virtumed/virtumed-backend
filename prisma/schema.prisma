generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider = "prisma-erd-generator"
  output = "../entity_diagram.pdf"
}

model Admin {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  image    String
  isAdmin  Boolean @default(true)

  createAt DateTime @default(now())
  updateAt DateTime
}

model Doctor {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  crm      String  @unique
  password String
  image    String
  isDoctor Boolean @default(true)

  createAt DateTime @default(now())
  updateAt DateTime
}

model Organization {
  id             String  @id @default(uuid())
  name           String
  email          String  @unique
  cnpj           String  @unique
  password       String
  image          String
  isOrganization Boolean @default(true)

  createAt DateTime @default(now())
  updateAt DateTime
}

model Patient {
  id        String  @id @default(uuid())
  name      String
  cpf       String  @unique
  email     String  @unique
  password  String
  image     String
  isPatient Boolean @default(true)

  createAt DateTime @default(now())
  updateAt DateTime
}
